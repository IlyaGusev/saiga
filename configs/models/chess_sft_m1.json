{
    "trainer": {
        "eval_strategy": "steps",
        "per_device_train_batch_size": 16,
        "per_device_eval_batch_size": 16,
        "eval_accumulation_steps": 4,
        "gradient_accumulation_steps": 4,
        "eval_steps": 1024,
        "save_steps": 1024,
        "logging_steps": 1,
        "learning_rate": 0.0003,
        "embedding_learning_rate": 0.00002,
        "num_train_epochs": 1,
        "lr_scheduler_type": "cosine",
        "warmup_steps": 128,
        "bf16": true,
        "fp16": false,
        "bf16_full_eval": true,
        "optim": "adamw_torch",
        "load_best_model_at_end": true,
        "save_total_limit": 1,
        "seed": 1337,
        "weight_decay": 0.01
    },
    "lora": {
        "r": 256,
        "lora_alpha": 128,
        "lora_dropout": 0.0,
        "bias": "none",
        "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj", "gate_proj", "up_proj", "down_proj"],
        "modules_to_save": ["embed_tokens", "lm_head"],
        "use_gradient_checkpointing": "unsloth"
    },
    "load_in_8bit": false,
    "load_in_4bit": true,
    "only_target_loss": true,
    "model_name": "models/qwen3_4b",
    "max_tokens_count": 2048,
    "max_seq_length": 2048,
    "bos_token": "<|im_end|>",
    "eos_token": "<|im_end|>",
    "pad_token": "<|endoftext|>",
    "fix_untrained_tokens": true,
    "add_global_bos": false
}
